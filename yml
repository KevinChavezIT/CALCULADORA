este es mi playbook 
---
- name: Descargar archivo .nmon desde VIOS y subir a Azure Blob
  hosts: vios_testt
  gather_facts: false

  vars:
    remote_source_dir: "/home/NMON"

  tasks:

  pre_tasks:
    - name: Log start of playbook execution
      ansible.builtin.include_role:
        name: pichincha.sre.pre_task

    - name: Crear directorio local de staging
      ansible.builtin.file:
        path: "/tmp/nmon_{{ inventory_hostname }}/"
        state: directory
        mode: "0755"
      delegate_to: localhost
      become: false

    - name: Encontrar el Ãºltimo .nmon en el VIOS (ordenado por fecha)
      ansible.builtin.raw: "ls -1t {{ remote_source_dir }}/*.nmon 2>/dev/null | head -1"
      register: ultimo_nmon
      changed_when: false

    - name: Normalizar ruta del archivo encontrado
      ansible.builtin.set_fact:
        nmon_file: "{{ (ultimo_nmon.stdout | default('')) | regex_replace('\r', '') | trim }}"
      changed_when: false

    - name: Mostrar archivo normalizado
      ansible.builtin.debug:
        msg: "Ruta normalizada: '{{ nmon_file if (nmon_file | length > 0) else 'Ninguno' }}'"

    - name: Validar existencia del archivo en el remoto
      ansible.builtin.stat:
        path: "{{ nmon_file }}"
      register: nmon_stat
      when: nmon_file | length > 0

    - name: Descargar el archivo .nmon al controlador
      ansible.builtin.fetch:
        src: "{{ nmon_file }}"
        dest: "/tmp/nmon_{{ inventory_hostname }}/"
        flat: true
      when: nmon_file | length > 0 and nmon_stat.stat.exists and nmon_stat.stat.isreg

    - name: Mostrar resultado local
      ansible.builtin.shell: |
        echo "=== Resultado ==="
        echo "Servidor: {{ inventory_hostname }}"
        echo "Directorio: /tmp/nmon_{{ inventory_hostname }}/"
        echo "Archivos:"
        ls -lh "/tmp/nmon_{{ inventory_hostname }}/" 2>/dev/null || echo "No se extrajeron archivos"
      delegate_to: localhost
      become: false
      changed_when: false

    - name: Calcular fecha local para prefijo (YYYY-MM-DD)
      delegate_to: localhost
      become: false
      ansible.builtin.set_fact:
        date_folder: "{{ lookup('pipe', 'date +%F') }}"

    - name: Definir nombres y rutas para la subida a Azure
      delegate_to: localhost
      become: false
      vars:
        _nmon_local_dir: "/tmp/nmon_{{ inventory_hostname }}/"
        _nmon_local_file: "{{ nmon_file | basename }}"
        _blob_prefix: "AIX/{{ inventory_hostname }}/{{ date_folder }}"
      ansible.builtin.set_fact:
        azure_rg: "rg-sre-automatizacion"
        azure_storage_account: "stsreautdev01"
        azure_container: "reporte-nmon"
        nmon_local_dir: "{{ _nmon_local_dir }}"
        nmon_local_file: "{{ _nmon_local_file }}"
        nmon_blob_prefix: "{{ _blob_prefix }}"
        nmon_blob_name: "{{ _blob_prefix }}/{{ _nmon_local_file }}"

    - name: Subir archivo NMON a Azure Storage Blob
      azure.azcollection.azure_rm_storageblob:
        resource_group: "{{ azure_rg }}"
        storage_account_name: "{{ azure_storage_account }}"
        force: true
        container: "{{ azure_container }}"
        blob: "{{ nmon_blob_name }}"
        src: "{{ nmon_local_dir }}/{{ nmon_local_file }}"
      delegate_to: localhost
      register: azure_upload_result

    - name: Mostrar resumen de subida
      delegate_to: localhost
      become: false
      ansible.builtin.debug:
        msg: >
          Blob: {{ nmon_blob_name }}
          Container: {{ azure_container }}
          Storage Account: {{ azure_storage_account }}
          Subida realizada: {{ azure_upload_result.changed | default(false) }}

  post_tasks:
    - name: Log end of playbook execution
      ansible.builtin.include_role:
        name: pichincha.sre.post_task

